{
  "manifest_version": 3,
  "name": "Indeed Candidate Shortcuts",
  "version": "1.2.0",
  "description": "Keyboard shortcuts for reviewing candidates on Indeed Employer: shortlist, undecided, reject, and navigate.",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://employers.indeed.com/*"],
      "js": ["content.js"],
      "css": ["toast.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": []
}
